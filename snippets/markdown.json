{
  "定例会議 議事メモテンプレート": {
    "prefix": "!memo",
    "body": [
      "# ${1:定例名} - 議事メモ",
      "",
      "---",
      "## 開催情報",
      "- 日付: ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}",
      "- 時間: ${2:HH:MM} - ${3:HH:MM}",
      "- 開催場所: ${4:オンライン / 会議室}",
      "- 参加者（敬称略）:",
      "  - A: ${5:氏名,氏名}",
      "  - B: ${6:氏名,氏名（記載）}",
      "",
      "---",
      "## 次回までのアクション",
      "- [ ] ${7:対応内容}",
      "  - [ ] （担当: ${8:氏名} / 期限: ${9:YYYY-MM-DD}）",
      "",
      "---",
      "## 決定事項",
      "- ${10:決定内容}",
      "",
      "---",
      "## 議論内容",
      "",
      "---",
      "### 個別トピック 1",
      "- ${11:トピック内容}",
      "",
      "---",
      "### 個別トピック 2",
      "- ${12:トピック内容}",
      "",
      "---",
      "## 補足・備考",
      "- ${13:補足内容}",
      "",
      "以上"
    ],
    "description": "定例会議の議事メモテンプレート（Markdown形式）"
  }
}
